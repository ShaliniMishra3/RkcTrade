    <ImageView
        android:id="@+id/backFund"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_arrow_back"
        />
        -->
    <!--
    <TextView
        android:id="@+id/headText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Withdraw"
        android:textSize="25dp"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
        -->
   <LinearLayout
       android:id="@+id/layout"
       android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headText"
    >
    <TextView
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Wallet Balance"
        android:textSize="16dp"
        />
       <EditText
           android:layout_marginTop="10dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginStart="20dp"
           android:background="@drawable/edittext_gray_border"
           android:layout_marginEnd="20dp"
           />
       <TextView
           android:layout_marginStart="20dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Account No"
           android:textSize="16dp"
           android:layout_marginTop="10dp"
           />
       <EditText
           android:layout_marginTop="10dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginStart="20dp"
           android:background="@drawable/edittext_gray_border"
           android:layout_marginEnd="20dp"
           />
       <TextView
           android:layout_marginStart="20dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Amount"
           android:textSize="16dp"
           android:layout_marginTop="10dp"
           />
       <EditText
           android:layout_marginTop="10dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginStart="20dp"
           android:background="@drawable/edittext_gray_border"
           android:layout_marginEnd="20dp"
           />
       <TextView
           android:layout_marginStart="20dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Deduction Amount"
           android:textSize="16dp"
           android:layout_marginTop="10dp"
           />
       <EditText
           android:layout_marginTop="10dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginStart="20dp"
           android:background="@drawable/edittext_gray_border"
           android:layout_marginEnd="20dp"
           />
       <TextView
           android:layout_marginStart="20dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Withdrawal Amount"
           android:textSize="16dp"
           android:layout_marginTop="10dp"
           />
       <EditText
           android:layout_marginTop="10dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginStart="20dp"
           android:background="@drawable/edittext_gray_border"
           android:layout_marginEnd="20dp"
           />
   </LinearLayout>
    <com.google.android.material.button.MaterialButton
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        app:backgroundTint="@null"
        android:background="@drawable/btn_gradient"
        app:rippleColor="@null"
        app:cornerRadius="0dp"

        app:layout_constraintTop_toBottomOf="@+id/layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>