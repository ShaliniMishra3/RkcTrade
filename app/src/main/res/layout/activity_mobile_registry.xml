<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MobileRegistry">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/topBarMobile"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="15dp"
            android:text="Mobile Registry"
            android:textSize="25sp"
            android:gravity="center"
            android:textStyle="bold"
            />
        <ImageView
            android:id="@+id/ic_closeMobile"
            android:layout_width="27sp"
            android:layout_height="27sp"
            android:src="@drawable/ic_close"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="15dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/MobileTag"
        android:orientation="vertical"
        android:paddingHorizontal="15dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/topBarMobile"
        app:layout_constraintStart_toStartOf="parent"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="First Name"
            android:textSize="20sp"
            />
        <EditText
            android:id="@+id/etFirstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter First Name"
            android:textSize="18sp"
            android:background="@drawable/edittext_gray_border"
            android:padding="10dp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last Name"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            />
        <EditText
            android:id="@+id/etLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Last Name"
            android:textSize="18sp"
            android:background="@drawable/edittext_gray_border"
            android:padding="10dp"
            android:textColor="@color/black"

            android:layout_marginTop="10dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mobile Number"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            />
        <EditText
            android:id="@+id/etMobileName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Mobile Number"
            android:textSize="18sp"
            android:background="@drawable/edittext_gray_border"
            android:padding="10dp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="State"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            />
        <Spinner
            android:id="@+id/spinnerState"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext_gray_border"
            android:spinnerMode="dropdown"
            android:dropDownWidth="match_parent"
            android:popupBackground="@color/white"
            android:textAlignment="textStart"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="City"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            />
        <EditText
            android:id="@+id/etCityName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter City Name"
            android:textSize="18sp"
            android:background="@drawable/edittext_gray_border"
            android:padding="10dp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            />
        <EditText
            android:id="@+id/etAddressName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Address"
            android:textSize="18sp"
            android:background="@drawable/edittext_gray_border"
            android:padding="10dp"
            android:textColor="@color/black"

            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PinCode"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            />
        <EditText
            android:id="@+id/etPinName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Pin Number"
            android:textSize="18sp"
            android:background="@drawable/edittext_gray_border"
            android:padding="10dp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Submit"
            android:textSize="20sp"
            android:padding="10dp"
            android:backgroundTint="@color/blue"
            />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>