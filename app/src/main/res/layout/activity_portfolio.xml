        <!-- Holdings tab -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/holdingsTab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Holdings 7"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/blue" />

            <!-- underline only as wide as text -->
            <View
                android:id="@+id/holdingsUnderline"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/blue"
                android:visibility="visible"/>
        </LinearLayout>

        <!-- Positions tab -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginStart="32dp">

            <TextView
                android:id="@+id/positionsTab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Positions"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <View
                android:id="@+id/positionsUnderline"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/blue"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>

    <!-- ===== Card with Invested / Current / P&L ===== -->
    <androidx.cardview.widget.CardView
        android:id="@+id/summaryCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/tabs"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="25dp">

            <!-- Row: Invested & Current -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Invested"
                    android:textSize="14sp"
                    android:textColor="#666" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Current"
                    android:textSize="14sp"
                    android:textColor="#666" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="8dp">

                <TextView
                    android:id="@+id/investedValue"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="17,958.59"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/currentValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13,221.08"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0" />

            <!-- Row: P&L -->
            <!--
            <LinearLayout
                android:layout_width="match_parent"
