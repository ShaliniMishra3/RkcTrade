<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/transparent">

    <!-- Center Card -->
    <androidx.cardview.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        android:layout_gravity="center"
        android:padding="16dp"
        android:background="@android:color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical">
            <!-- Property Name -->
            <TextView
                android:id="@+id/propertyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Property Name"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"/>

            <!-- Property Value -->
            <TextView
                android:id="@+id/propertyValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1234.56"
                android:textSize="16sp"
                android:textColor="#333333"
                android:layout_marginTop="4dp"/>


            <!-- Property Rate -->
            <TextView
                android:id="@+id/propertyRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Property Rate: Rs. 550"
                android:textSize="16sp"
                android:textColor="#000000" />

            <!-- Balance -->
            <TextView
                android:id="@+id/myBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Balance: Rs. 0"
                android:textSize="16sp"
                android:layout_marginTop="4dp"
                android:textColor="#000000" />

            <!-- Quantity -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="12dp"/>

            <EditText
                android:id="@+id/quantityInput"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@android:drawable/edit_text"
                android:padding="8dp"
                android:inputType="number"
               />

            <!-- Property Amount -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Property Amount ✏️"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="12dp"/>

            <EditText
                android:id="@+id/propertyAmount"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@android:drawable/edit_text"
                android:padding="8dp"
                android:inputType="number"
                />

            <!-- Final Amount -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Final Amount ✏️"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="12dp"/>

            <EditText
                android:id="@+id/finalAmount"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@android:drawable/edit_text"
                android:padding="8dp"
                android:inputType="number"
              />

            <!-- Submit Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/submitButton"
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:text="Submit Order"
                android:layout_marginTop="10dp"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/btn_gradient"
                app:backgroundTint="@null"/>



        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
